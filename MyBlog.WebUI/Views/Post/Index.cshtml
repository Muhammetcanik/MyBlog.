@model List<PostDto>


<table>

    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Author</th>
            <th>Date Published</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.Content</td>
                <td>@post.AuthorFullName</td>
                <td>@post.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td><a href="/post/details/@post.Id">Detay</a></td>
            </tr>
        }
    </tbody>

</table>